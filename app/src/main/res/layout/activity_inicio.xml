<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.proyecto.Certificado.InicioActivity">


    <TextView
        android:id="@+id/textViewBienvenida"
        android:layout_width="324dp"
        android:layout_height="141dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp"
        android:text="@string/textViewBienvenida"
        android:textAlignment="center"
        android:textSize="36sp"
        app:layout_constraintBottom_toTopOf="@+id/btnAgregarTitulo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.494"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.851" />

    <Button
        android:id="@+id/btnAgregarTitulo"

        android:layout_width="405dp"
        android:layout_height="54dp"

        android:layout_marginBottom="40dp"
        android:background="#8FDA03"
        android:onClick="AgregarTitulo"
        android:text="@string/btnAgregarTitulo"
        android:textColor="@android:color/widget_edittext_dark"
        app:layout_constraintBottom_toTopOf="@+id/btnlistarTitulos"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnlistarTitulos"
        android:layout_width="405dp"
        android:layout_height="54dp"
        android:layout_marginBottom="40dp"
        android:background="#8FDA03"
        android:onClick="listarTitulos"
        android:text="@string/btnlistarTitulos"
        android:textColor="@android:color/widget_edittext_dark"
        app:layout_constraintBottom_toTopOf="@+id/btnBuscarCertificados"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnBuscarCertificados"
        android:layout_width="405dp"
        android:layout_height="54dp"
        android:layout_marginBottom="40dp"
        android:background="#8FDA03"
        android:onClick="buscarCertificados"
        android:text="@string/btnBuscarCertificados"
        android:textColor="@android:color/widget_edittext_dark"
        app:layout_constraintBottom_toTopOf="@+id/btnCerrarSesion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnCerrarSesion"
        android:layout_width="405dp"
        android:layout_height="54dp"
        android:layout_marginBottom="56dp"
        android:background="#8FDA03"
        android:onClick="cerrarSesion"
        android:text="Cerrar Sesion"
        android:textColor="@android:color/widget_edittext_dark"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
