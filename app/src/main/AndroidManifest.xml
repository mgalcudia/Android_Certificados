        </activity>
        <activity android:name=".ListarHistoricos" />
        <activity android:name=".HistoricoCertificado" />
        <activity android:name=".BuscarCertificado" />
        <activity android:name=".MostrarCertificado" />
        <activity android:name=".ListarCertificados" />
        <activity android:name=".AgregarActivity" />
        <activity android:name=".InicioActivity" />
        <activity android:name=".RegistroActivity" />
        <activity android:name=".LoginActivity" />
    </application>
</manifest>